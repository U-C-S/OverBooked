	"version": "2.0.0",
	"tasks": [
		{
			"label": "NestJS API",
			"type": "shell",
			"command": "npm",
			"args": ["run", "dev"],
			"options": {
				"cwd": "./apps/api"
			},
			"problemMatcher": ["$eslint-stylish"]
		},
		{
			"label": "NextJS WebSite",
			"type": "shell",
			"command": "npm",
			"args": ["run", "dev"],
			"options": {
				"cwd": "./apps/client"
			},
			"problemMatcher": ["$eslint-stylish"]
		}
	]
}
